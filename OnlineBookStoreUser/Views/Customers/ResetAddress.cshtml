@model OnlineBookStoreUser.Models.Customers
@{
    ViewData["Title"] = "ResetAddress";
    Layout = "~/Views/Shared/_ProfileUserLayout.cshtml";
}



    <div class="col-md-8">
        <div class="card mb-4 shadow-sm">

            <li class="list-group-item">
                <p> <center><h3><b>Change Address</b></h3></center></p>
            </li>
            <div class="card-body">
                <li class="list-group-item">

                    <form asp-controller="Customers" asp-action="Edit">
                        <ul class="list-group list-group-flush">
                            @Html.HiddenFor(model => model.CustomerId)
                            @Html.HiddenFor(model => model.FirstName)
                            @Html.HiddenFor(model => model.LastName)
                            @Html.HiddenFor(model => model.UserName)
                            @Html.HiddenFor(model => model.Email)
                            @Html.HiddenFor(model => model.OldPassword)
                            @Html.HiddenFor(model => model.NewPassword)

                            @Html.HiddenFor(model => model.Contact)
                            @Html.HiddenFor(model => model.ShippingAddress)


                            <li class="list-group-item">Address : <input type="text" asp-for="Address" class="form-control" /></li>
                            <li class="list-group-item">ZipCode : <input type="text" asp-for="ZipCode" class="form-control" /></li>


                        </ul>


                        <input type="submit" value="Reset Address" class="btn btn-primary" />
                    </form>


                </li>



            </div>
        </div>
    </div>

