@model OnlineBookStoreUser.Models.Customers

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="register">
    <div class="container">
        <h3 class="animated wow zoomIn" data-wow-delay=".5s">Register Form</h3>

        <div class="register-form-grids animated wow slideInUp" data-wow-delay=".5s">
            <form class="form-signin" method="post" asp-action="Register" asp-controller="Customers">
                <div class="row">
                    <h4 class="col-9 mb-2">Basic Details</h4>
                    <div class="col-5 mb-2">
                        <br />
                        <label asp-for="FirstName"><b>First Name</b></label>
                        <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter First Name">

                    </div>
                    <div class="col-12 mb-3">
                        <label asp-for="LastName"><b>Last Name</b></label>
                        <input type="text" asp-for="LastName" class="form-control" placeholder="Enter Last Name">
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 mb-3">
                        <label asp-for="UserName"><b>User Name</b></label>
                        <input type="text" asp-for="UserName" class="form-control" placeholder="Enter User Name">
                    </div>
                    <div class="col-12 mb-3">
                        <label asp-for="Password"><b>Password</b></label>
                        <input type="text" asp-for="Password" class="form-control" placeholder="Enter Password">
                    </div>
                    <div class="col-12 mb-3">
                        <label asp-for="Email"><b>Email</b></label>
                        <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email">
                    </div>
                </div>

                <div class="row">
                    <br />
                    <hr />
                    <h4 class="col-12 mb-3">Billing Address</h4>
                    <hr />
                    <br />
                    <div class="col-12 mb-3">
                        <label asp-for="Address"><b>Address</b></label>
                        <input type="text" asp-for="Address" class="form-control" placeholder="Enter Address">
                    </div>
                </div>
                <br />

                <div class="col-12 mb-3">
                    <label asp-for="City"><b>State</b></label>
                    <select asp-for="City" class="custom-select d-block w-100" id="state" required>
                        <option value="">Choose...</option>
                        <option>Delhi - India</option>
                        <option>Maharastra - India</option>
                        <option>Uttar Pradesh - India</option>
                        <option>Karnataka - India</option>
                        <option>Bedfordshire - England</option>
                        <option>Buckinghamshire - England</option>
                        <option>City of London - England</option>
                        <option>Staffordshire - England</option>
                        <option>Abu Dhabi - UAE</option>
                        <option>Ajman - UAE</option>
                        <option>Dubai - UAE</option>
                        <option>Ras al-Khaimah - UAE</option>
                        <option>Alaska - USA</option>
                        <option>Maryland - USA</option>
                        <option>Hawaii - USA</option>
                        <option>New York - USA</option>
                        <option>Queensland - Australia</option>
                        <option>Tasmania - Australia</option>
                        <option>New South Wales - Australia</option>
                        <option>Victoria - Australia</option>
                        <option>Fujian - China</option>
                        <option>Hainan - China</option>
                        <option>Shaanxi - China</option>
                        <option>Yunnan - China</option>
                    </select>
                    <div class="invalid-feedback">
                        Please provide a valid state.
                    </div>
                </div>

                <div class="col-12 mb-3">
                    <label asp-for="Country"><b>Country</b></label>
                    <select asp-for="Country" class="custom-select d-block w-100" id="country" required>
                        <option value="">Choose...</option>
                        <option>India</option>
                        <option>USA</option>
                        <option>UAE</option>
                        <option>Australia</option>
                        <option>England</option>
                        <option>China</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select a valid country.
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ZipCode"><b>Zip Code</b></label>
                        <input type="text" asp-for="ZipCode" class="form-control" placeholder="Enter Zip Code">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Contact"><b>Contact</b></label>
                        <input type="text" asp-for="Contact" class="form-control" placeholder="Enter Contact">
                    </div>
                </div>
                <br/>
             <center><input type="submit" value="Register"></center>   



            </form>

        </div>
    </div>
</div>
