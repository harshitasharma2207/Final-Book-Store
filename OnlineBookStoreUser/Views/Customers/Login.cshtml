
@model OnlineBookStoreUser.Models.Customers
@using Microsoft.AspNetCore.Http;
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


    <!-- breadcrumbs -->
    <div class="breadcrumbs">
        <div class="container">
            <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
                <li><a href="index.html"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
                <li class="active">Login Page</li>
            </ol>
        </div>
    </div>
    <!-- //breadcrumbs -->
    <!-- login -->
    <div class="login">
        <div class="container">
            <h3 class="animated wow zoomIn" data-wow-delay=".5s">Login Form</h3>

            <div class="login-form-grids animated wow slideInUp" data-wow-delay=".5s">
                <form class="form-signin" method="post" align="center" asp-controller="Customers" asp-action="login">
                    <label asp-for="UserName"><b style="color:burlywood;">User Name</b></label>
                    <input type="text" asp-for="UserName" class="form-control" placeholder="Enter User Name">
                    <label asp-for="Password"><b style="color:burlywood;">Password</b></label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password">

                    <input type="submit" value="Login">


                </form>
            </div>
            <h4 class="animated wow slideInUp" data-wow-delay=".5s">For New People</h4>
            <p class="animated wow slideInUp" data-wow-delay=".5s"><a asp-controller="Customers" asp-action="Register">Register Here</a> (Or) go back to <a asp-controller="Home" asp-action="Index">Home<span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span></a></p>
        </div>
    </div>
    <!-- //login -->


  