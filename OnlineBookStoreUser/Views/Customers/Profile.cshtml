 @model OnlineBookStoreUser.Models.Customers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="main">

    <legend class="text-center header">User Dashboard</legend>
    <div class="row">
        <div class="card-group">

            <div class="col-lg-9">
                <div class="well well-sm">

                    <div class="col-md-10 order-md-3">

                        <form asp-action="Profile" asp-controller="Customers">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label asp-for="FirstName"><b>First name</b></label>
                                    <input asp-for="FirstName" type="text" class="form-control" placeholder="" required>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>

                                </div>
                                <div class="col-lg-12">
                                    <b>   <label asp-for="LastName">Last name</label></b>
                                    <input asp-for="LastName" type="text" class="form-control" placeholder="" required>

                                </div>
                            </div>
                            <div class="col-lg-12">
                                <b>   <label asp-for="UserName">UserName</label></b>
                                <input asp-for="UserName" type="text" class="form-control" placeholder="" required>

                            </div>


                            <div class="col-lg-12">
                                <b>    <label asp-for="Email">Email</label></b>
                                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="you@example.com">

                            </div>

                            <div class="col-lg-12">
                                <b>     <label asp-for="Contact">Contact</label></b>
                                <input asp-for="Contact" type="text" class="form-control" id="Contact" placeholder="" required>

                            </div>



                    </div>


                    </form>

                </div>
            </div>
            
        </div>
    </div>
</div>
<br/>
<center><a asp-controller="Home" asp-action="Index">Home</a></center>
</div>