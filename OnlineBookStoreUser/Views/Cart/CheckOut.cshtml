
@model OnlineBookStoreUser.Models.Customers
@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style type="text/css">
    body {
        background-image: url(https://ak1.picdn.net/shutterstock/videos/6307541/thumb/1.jpg);
        background-size: cover;
        background-attachment: fixed;
    }

    .content {
        background: hsla(327, 100%, 3%, 0.57);
        width: 90%;
        padding: 40px;
        margin: 100px auto;
    }

    p {
        font-size: 25px;
        color: darkblue;
    }
</style>

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v3.8.5">
    <title>Checkout</title>
    <link rel="canonical" href="https://getbootstrap.com/docs/4.3/examples/checkout/">
    <!-- Bootstrap core CSS -->
    <link href="/docs/4.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }
    </style>
    <!-- Custom styles for this template -->
    <link href="form-validation.css" rel="stylesheet">
</head>
<body class="bg-light" style="color:white;">
    
    <div class="container">
        <div class="py-5 text-center">
            @*<img class="d-block mx-auto mb-4" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">*@
            <h2><b>Checkout form</b></h2>
           
        </div>
        @foreach(var item in ViewBag.Cart)
        {
            ViewBag.i++;
        }
        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted"><b  style="color:white;">Your Bookings</b></span>
                     <span class="badge badge-secondary badge-pill">@ViewBag.i</span>
                </h4>
                <ul class="list-group mb-3">
                    @foreach (var item in ViewBag.Cart)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div >
                                <h6 class="my-0"  style="color:black;" >@item.Books.BookName</h6>
                                <h6 class="my-0">@item.Quantity</h6>
                                <small class="text-muted">@item.Books.BookType</small>
                            </div>
                            <span class="text-muted">@item.Books.BookPrice</span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (INR)</span>
                        <strong>@ViewBag.total</strong>
                    </li>
                </ul>
            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3"><b>Customer Bill</b></h4>
                <form asp-action="CheckOut" asp-controller="Cart">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName"><b>First name</b></label>
                            <input asp-for="FirstName" type="text" class="form-control" placeholder=""required>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Valid first name is required.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                         <b>   <label asp-for="LastName">Last name</label></b>
                            <input asp-for="LastName" type="text" class="form-control" placeholder="" required>
                            <div class="invalid-feedback">
                                Valid last name is required.
                            </div>
                        </div>
                         </div>
                        <div class="mb-3">
                         <b>   <label asp-for="UserName">UserName</label></b>
                            <input asp-for="UserName" type="text" class="form-control" placeholder=""  required>
                            <div class="invalid-feedback">
                                Valid last name is required.
                            </div>
                        </div>
                   
                    
                    <div class="mb-3">
                    <b>    <label asp-for="Email">Email</label></b>
                        <input asp-for="Email" type="email" class="form-control" id="email" placeholder="you@example.com">
                        <div class="invalid-feedback">
                            Please enter a valid email address for shipping updates.
                        </div>
                    </div>
                    <div class="mb-3">
                       <b> <label asp-for="Address">Address</label></b>
                        <input asp-for="Address" type="text" class="form-control" id="address" placeholder="1234 Main St" required>
                        <div class="invalid-feedback">
                            Please enter your shipping address.
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                       <b>     <label asp-for="Country">Country</label></b>
                            <select asp-for="Country" class="custom-select d-block w-100" id="country" required>
                                <option value="">Choose...</option>
                                <option>India</option>
                                <option>USA</option>
                                <option>UAE</option>
                                <option>Australia</option>
                                <option>England</option>
                                <option>China</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a valid country.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                          <b>  <label asp-for="City">State</label></b>
                          <select asp-for="City" class="custom-select d-block w-100" id="state" required>
                              <option value="">Choose...</option>
                              <option>Delhi - India</option>
                              <option>Maharastra - India</option>
                              <option>Uttar Pradesh - India</option>
                              <option>Karnataka - India</option>
                              <option>Bedfordshire - England</option>
                              <option>Buckinghamshire - England</option>
                              <option>City of London - England</option>
                              <option>Staffordshire - England</option>
                              <option>Abu Dhabi - UAE</option>
                              <option>Ajman - UAE</option>
                              <option>Dubai - UAE</option>
                              <option>Ras al-Khaimah - UAE</option>
                              <option>Alaska - USA</option>
                              <option>Maryland - USA</option>
                              <option>Hawaii - USA</option>
                              <option>New York - USA</option>
                              <option>Queensland - Australia</option>
                              <option>Tasmania - Australia</option>
                              <option>New South Wales - Australia</option>
                              <option>Victoria - Australia</option>
                              <option>Fujian - China</option>
                              <option>Hainan - China</option>
                              <option>Shaanxi - China</option>
                              <option>Yunnan - China</option>
                          </select>
                            <div class="invalid-feedback">
                                Please provide a valid state.
                            </div>
                        </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3>
                             <b>   <label asp-for="ZipCode">Zip Code</label></b>
                                <input asp-for="ZipCode" type="text" class="form-control" id="zip" placeholder="" required>
                                <div class="invalid-feedback">
                                    Zip code required.
                                </div>
                            </div>

                                <div class="col-md-6 mb-3>
                               <b>     <label asp-for="Contact">Contact</label></b>
                                    <input asp-for="Contact" type="text" class="form-control" id="Contact" placeholder="" required>
                                    <div class="invalid-feedback">
                                        Contact  required.
                                    </div>
                                </div>
                         


                        </div>
                        <hr class="mb-4">
                        <button value="CheckOut" class="btn btn-success" type="submit">Continue to checkout</button>
</form>
            </div>
        </div>
       
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="/docs/4.3/assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
    <script src="/docs/4.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o" crossorigin="anonymous"></script>
    <script src="form-validation.js"></script>
</body>
</html>
